    <!--    Add the scratch storage space-->
    <changeSet author="christopherzell (generated)" id="1612995079740-8">
        <createTable tableName="scratch_storage">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="scratch_storagePK"/>
            </column>
            <column name="app_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!--    Add 'istio-system' with implicit read-->
    <changeSet author="christopherzell" id="1612995079740-add-istio-app">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM app_client_user WHERE name='istio-system';
            </sqlCheck>
        </preConditions>
        <insert tableName="app_client_user">
            <column name="id" value="2620ba53-2967-4276-a851-00a45a95f75d" />
            <column name="name" value="istio-system" />
            <column name="name_as_lower" value="istio-system" />
        </insert>
    </changeSet>
    <changeSet author="christopherzell" id="1612995079740-add-istio-app-read">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM app_client_user WHERE name='istio-system';
            </sqlCheck>
        </preConditions>
        <insert tableName="app_client_user_privileges">
            <column name="app_client_user_id" valueComputed="(SELECT id FROM app_client_user WHERE name='istio-system')" />
            <column name="privileges_id" valueComputed="(SELECT id FROM privilege WHERE name='READ')" />
        </insert>
    </changeSet>

